<CircularButton>:
    text: ''
    font_name: 'Roboto'
    font_size: '18sp'
    color: .8, .2, .2, 1
    angle:0
    canvas.before:
        PushMatrix
        Color:
            rgba: root.color
        Ellipse:
            pos: self.pos
            size: self.size
        Rotate:
            angle: root.angle
            origin: self.center

    canvas.after:
        PopMatrix
    padding: (dp(8), 0)
    Label:
        center: self.parent.center
        color: 1,1,1,1
        text: self.parent.text
        font_name: self.parent.font_name
        font_size: self.parent.font_size


<Screen>:
    canvas:
        Color:
            rgb: .1, .1, .1
        Rectangle:
            size: self.size


<TodayRecycleView>:
    viewclass: 'TodayListItem'
    SelectableRecycleBoxLayout:
        default_size: None, dp(64) 
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        scroll_y: 0        

<TextRecycleView>:
    viewclass: 'TextListItem'
    selected: []
    SelectableRecycleBoxLayout:
        default_size: None, dp(64) 
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        scroll_y: 0        
        selected_nodes: root.selected

<NoteView>:
    id: noteView
    on_content: app.save_note(self.filepath, self.content)
    canvas:
        Color:
            rgb: (.0, .0, .0) 
        Rectangle:
            pos: self.pos
            size: self.size 
    size_hint: 1,1
    ScrollView:
        size_hint: 1, 1
        id: scrlv
        MDInput:
            size_hint: 1,None
            id: w_textinput
            padding:dp(10)
            text: root.content
            font_size: sp(14)
            on_text: root.content = self.text
            multiline: True
            background_color: (.1, .1, .1, 1)
            foreground_color: (1, 1, 1, 1)
            unfocus_on_touch: False
            auto_indent: True
            replace_crlf: True
            height: max( (len(self._lines)+1) * self.line_height +dp(48), scrlv.height)
                    
    FloatLayout:
        ScrollView:
            do_scroll_y: False
            pos: 0,0
            size_hint: None,None
            size: noteView.width, dp(48)
            BoxLayout:
                canvas:
                    Color:
                        rgba: (.8, .8, .8, .1) 
                    Rectangle:
                        pos: self.pos # self.pos[0]-dp(10), self.pos[1]
                        size: self.size  #self.size[0]+dp(20), self.size[1]
                orientation: 'horizontal'
                spacing: dp(5)
                size_hint: None, None
                #size: noteView.width - dp(20), dp(48)
                pos_hint: {'bottom':1}
                
                size: max(self.minimum_width,noteView.width), dp(48)
                #pos: dp(10), dp(0) #+ app.keyboard_height
                AwesomeButton:
                    text: '\uf14a'
                    on_release:  app.do_toggletask()
                    size_hint: None, None
                    height: '48dp'
                    width: '48dp'
                    font_size: "24sp"
                 
                AwesomeButton:
                    text: '\uf292'
                    on_release: app.do_togglepriority()
                    size_hint: None, None
                    height: '48dp' 
                    width: '48dp' 
                    font_size: "24sp"
                 
                AwesomeButton:
                    text: '\uf017'
                    on_release: app.go_timepicker()
                    size_hint: None, None
                    height: '48dp'
                    width: '48dp' 
                    font_size: "24sp"

                AwesomeButton:
                    text: '\uf03c'
                    on_release: app.do_indent()
                    size_hint: None, None
                    height: '48dp'
                    width: '48dp' 
                    font_size: "24sp"
                
                AwesomeButton:
                    text: '\uf03b'
                    on_release: app.do_unindent()
                    size_hint: None, None
                    height: '48dp'
                    width: '48dp' 
                    font_size: "24sp"

                AwesomeButton:
                    text: '\uf0c5'
                    on_release: w_textinput.copy()
                    size_hint: None, None
                    height: '48dp'
                    width: '48dp' 
                    font_size: "24sp"
                
                AwesomeButton:
                    text: '\uf0ea'
                    on_release: w_textinput.paste()
                    size_hint: None, None
                    height: '48dp'
                    width: '48dp' 
                    font_size: "24sp"
             
<TodoView>:
    BoxLayout:
        padding: dp(10) 
        size_hint: 1, 1
        orientation: 'vertical'
       
        MyTextInput:
            id: w_text
            background_color: (.2, .2, .2, 1)
            foreground_color: (1, 1, 1, 1)
            size_hint: 1, None
            unfocus_on_touch: False
            font_size: sp(14)
            height: max( (len(self._lines)+1) * self.line_height +dp(48), dp(64))
            canvas:
                Color:
                    rgba: (.8, .8, .8, .5) 
                Rectangle:
                    pos: self.pos[0]-dp(10), self.pos[1]
                    size: self.size[0]+dp(20), self.size[1]
        Label:
            size_hint: 1, 1
            height:dp(32)
            text: "Template"
        BoxLayout:
            size_hint: 1,1
            SelectableButton:
                id: w_todo
                text: "Todo"
                group: "template"
            SelectableButton:
                id: w_journal
                group: "template"
                text: "Journal"
            SelectableButton:
                id: w_event
                group: "template"
                text: "Event"
        Label:
            size_hint: 1, 1
            height:dp(32)
            text: "Priority"
            opacity: 1 if w_todo.selected else 0
        BoxLayout:
            opacity: 1 if w_todo.selected else 0
            size_hint: 1,1
            SelectableButton:
                id: w_priority_now
                group: "priority"
                text: "Today"
            SelectableButton:
                id: w_priority_next
                group: "priority"
                text: "Next"

        Label:
            size_hint: 1, 1
            height:dp(32)
            text: "Time"
            opacity: 1 if (w_todo.selected or w_event.selected) else 0
        BoxLayout:
            opacity: 1 if (w_todo.selected or w_event.selected) else 0
            size_hint: 1,1

            SelectableButton:
                id: w_morning
                group: "date"
                text: "Tomorrow Morning"
                default: False
                on_release: app.insertDatetimeAdd((datetime.datetime.now()+datetime.timedelta(days=1)).day, (datetime.datetime.now()+datetime.timedelta(days=1)).month, (datetime.datetime.now()+datetime.timedelta(days=1)).year, 9, 00);self.selected=False;w_time.selected=True

            SelectableButton:
                id: w_afternoon
                group: "date"
                text: "Tomorrow Afternoon"
                default: False
                on_release: app.insertDatetimeAdd((datetime.datetime.now()+datetime.timedelta(days=1)).day, (datetime.datetime.now()+datetime.timedelta(days=1)).month, (datetime.datetime.now()+datetime.timedelta(days=1)).year, 14, 00);self.selected=False;w_time.selected=True

        SelectableButton:
            group: "date"
            id: w_time
            text: "Select Time"
            opacity: 1 if (w_todo.selected or w_event.selected) else 0
            default: False
            on_release: app.go_timepicker()

        Widget:
            size_hint: 1,1


    FloatLayout:
        AwesomeCircularButton:
            color: .9,.2, .2, 1
            size_hint: None, None
            #pos_hint:{"bottom":1,"right":1}
            pos: root.width -dp(80), dp(16)
            #font_size: "24sp"
            text: '\uf271'
            height: '64dp'
            width: '64dp'
            on_release: app.add_item()

<TextListItem>:
    height: dp(64)
    #on_selected: app.edit_today(root.index, root.selected)
    canvas:
        Color:
            rgb: (.0, .0, .4, 0.9) if root.selected else (.0,.0,.0, 1)
        Rectangle:
            pos: self.pos
            size: self.size 
    Label:
        font_name:"awesome"
        font_size:"16sp"
        size_hint: 1, None
        size: dp(24), dp(24)
        pos_hint: {'center_y': 0.5}
        text: root.text 
   
<TodayListItem>:
    height: dp(64)
    #on_selected: app.inverse_todo(root.index, root.selected)
    on_selected: app.edit_today(root.index, root.selected)
    canvas:
        Color:
            rgb: (.0, .0, .0) if root.itemtype>0 else (.1,.1,.1)
        Rectangle:
            pos: self.pos
            size: self.size 
    BoxLayout:
        #height:dp(64)
        padding: dp(10) if root.itemtype>0 else dp(0), dp(0)
        size_hint: 1, 1
        orientation: 'horizontal'
        #Image:
        #    source: 'datas/unchecked.png' if root.itemtype==1 else ''
        #    size_hint: None, None
        #    size: dp(16) if root.itemtype>0 else dp(0), dp(16) if root.itemtype>0 else dp(0)
        #    pos_hint: {'center_y': 0.5}
        Label:
            font_name:"awesome"
            font_size:"16sp"
            size_hint: None, None
            size: dp(24), dp(24)
            text: "" if root.itemtype == 0 else ("\uf0c8" if root.itemtype == 1 else ("\uf017" if root.itemtype == 2 else "\uf039"))
            pos_hint: {'center_y': 0.5}
             
        BoxLayout:
            padding: dp(10) if root.itemtype != 0 else dp(0), dp(10), dp(10), dp(18) 
            orientation: 'vertical'
            size_hint: 1, 1
            Label:
                text: root.text
                halign: 'left'
                size_hint_y: None 
                text_size: self.size
                font_size: sp(24) if root.itemtype == 0 else sp(14)
            Label:
                text: root.due if root.due else ''
                color: 0.5, 0.5, 0.5, 1
                font_size: 0 if root.itemtype==0 else sp(12)
                halign: 'left'
                size_hint_y: None 
                text_size: self.size
                height: 0 if root.itemtype==0 else dp(14)
  
